{
  "manifest_version": 3,
  "name": "Copy As Markdown",
  "version": "1.1",
  "description": "Copy the visible page text as Markdown (with Mermaid SVGs converted to mermaid blocks).",
  "author": "Mbosinwa Awunor",
  "homepage_url": "https://github.com/mbosinwa", 
  "permissions": [
    "scripting",
    "activeTab",
    "clipboardWrite",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Copy As Markdown"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["turndown.js", "svgToMermaid.js", "content.js"]
    }
  ]
}